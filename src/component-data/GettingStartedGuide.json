  "developerGuide": {
    "title": "Developer Guide",
    "description": "Technical guide for developers wanting to deploy or contribute to Clipposaurus",
    "prerequisites": {
      "title": "Prerequisites",
      "requirements": [
        {
          "category": "Runtime",
          "items": [
            "Node.js 18.17 or later",
            "npm 9.6 or later (or yarn/pnpm equivalent)",
            "Git for version control"
          ]
        },
        {
          "category": "Services",
          "items": [
            "Redis database (Upstash recommended)",
            "At least one S3-compatible storage provider",
            "reCAPTCHA v3 keys (optional but recommended)",
            "Domain with SSL certificate"
          ]
        },
        {
          "category": "Development Environment",
          "items": [
            "VS Code or similar editor",
            "Terminal/Command line access",
            "Basic understanding of Next.js and React"
          ]
        }
      ]
    },
    "installation": {
      "title": "Local Development Setup",
      "steps": [
        {
          "step": 1,
          "title": "Clone Repository",
          "commands": [
            "git clone https://github.com/your-username/clipposaurus.git",
            "cd clipposaurus"
          ],
          "description": "Get the source code locally"
        },
        {
          "step": 2,
          "title": "Install Dependencies",
          "commands": ["npm install", "# or", "yarn install"],
          "description": "Install all required packages"
        },
        {
          "step": 3,
          "title": "Environment Setup",
          "description": "Create and configure environment variables",
          "files": [
            {
              "file": ".env.local",
              "description": "Local development environment variables",
              "requiredVars": [
                "NEXT_PUBLIC_BASE_URL=http://localhost:3000",
                "UPSTASH_REDIS_REST_URL=your_redis_url",
                "UPSTASH_REDIS_REST_TOKEN=your_redis_token",
                "ENCRYPTION_KEY=your_32_character_encryption_key",
                "KEY_LENGTH=32",
                "IV_LENGTH=12",
                "SALT_LENGTH=16",
                "TAG_LENGTH=16"
              ],
              "storageVars": [
                "# At least one storage provider required:",
                "CLOUDFLARE_R2_ACCESS_KEY_ID=your_key",
                "CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret",
                "CLOUDFLARE_R2_BUCKET_NAME=your_bucket",
                "CLOUDFLARE_R2_ENDPOINT=your_endpoint",
                "CLOUDFLARE_R2_PUBLIC_URL=your_public_url"
              ],
              "optionalVars": [
                "RECAPTCHA_SECRET_KEY=your_recaptcha_secret",
                "NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key"
              ]
            }
          ]
        },
        {
          "step": 4,
          "title": "Database Setup",
          "description": "Configure Redis database",
          "options": [
            {
              "option": "Upstash (Recommended)",
              "steps": [
                "Create account at upstash.com",
                "Create new Redis database",
                "Copy REST URL and token to .env.local",
                "Test connection with npm run test:redis"
              ]
            },
            {
              "option": "Local Redis",
              "steps": [
                "Install Redis locally",
                "Start Redis server: redis-server",
                "Configure connection in .env.local",
                "Test with redis-cli ping"
              ]
            }
          ]
        },
        {
          "step": 5,
          "title": "Storage Provider Setup",
          "description": "Configure at least one storage provider",
          "providers": [
            {
              "provider": "Cloudflare R2",
              "setup": [
                "Create Cloudflare account",
                "Enable R2 storage",
                "Create bucket and API keys",
                "Configure public access and custom domain"
              ],
              "benefits": [
                "Fast global CDN",
                "Generous free tier",
                "S3 compatibility"
              ]
            },
            {
              "provider": "Backblaze B2",
              "setup": [
                "Create Backblaze account",
                "Create bucket with public access",
                "Generate application keys",
                "Configure friendly URLs"
              ],
              "benefits": ["Cost effective", "Simple setup", "Reliable storage"]
            },
            {
              "provider": "Storj",
              "setup": [
                "Create Storj account",
                "Generate S3-compatible credentials",
                "Create bucket with public gateway",
                "Configure access keys"
              ],
              "benefits": [
                "Decentralized",
                "High security",
                "Redundant storage"
              ]
            }
          ]
        },
        {
          "step": 6,
          "title": "Run Development Server",
          "commands": ["npm run dev", "# or", "yarn dev"],
          "description": "Start the development server on http://localhost:3000"
        }
      ]
    },
    "deployment": {
      "title": "Production Deployment",
      "platforms": [
        {
          "platform": "Vercel (Recommended)",
          "description": "Optimized for Next.js applications",
          "steps": [
            {
              "step": "Connect Repository",
              "description": "Link your GitHub/GitLab repository to Vercel"
            },
            {
              "step": "Configure Environment",
              "description": "Set all production environment variables in Vercel dashboard"
            },
            {
              "step": "Deploy",
              "description": "Automatic deployment on git push"
            },
            {
              "step": "Configure Domain",
              "description": "Set up custom domain with SSL"
            }
          ],
          "environmentVariables": [
            "All .env.local variables",
            "NEXT_PUBLIC_BASE_URL=https://yourdomain.com",
            "NODE_ENV=production"
          ]
        },
        {
          "platform": "Docker",
          "description": "Containerized deployment for any environment",
          "files": [
            {
              "file": "Dockerfile",
              "content": "FROM node:18-alpine\nWORKDIR /app\nCOPY package*.json ./\nRUN npm ci --only=production\nCOPY . .\nRUN npm run build\nEXPOSE 3000\nCMD [\"npm\", \"start\"]"
            },
            {
              "file": "docker-compose.yml",
              "content": "version: '3.8'\nservices:\n  clipposaurus:\n    build: .\n    ports:\n      - '3000:3000'\n    environment:\n      - NODE_ENV=production\n    env_file:\n      - .env.production"
            }
          ],
          "commands": [
            "docker build -t clipposaurus .",
            "docker run -p 3000:3000 --env-file .env.production clipposaurus"
          ]
        },
        {
          "platform": "Self-Hosted",
          "description": "Deploy on your own server",
          "steps": [
            {
              "step": "Server Setup",
              "description": "Prepare Linux server with Node.js and PM2"
            },
            {
              "step": "Clone and Build",
              "commands": ["git clone your-repo", "npm ci", "npm run build"]
            },
            {
              "step": "Process Management",
              "commands": [
                "npm install -g pm2",
                "pm2 start npm --name 'clipposaurus' -- start",
                "pm2 save && pm2 startup"
              ]
            },
            {
              "step": "Reverse Proxy",
              "description": "Configure Nginx or Apache for SSL termination"
            }
          ]
        }
      ]
    },
